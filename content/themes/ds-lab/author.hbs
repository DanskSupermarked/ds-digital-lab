{{! The big featured header }}

{{! Everything inside the #author tags pulls data from the author }}
{{#author}}

    <header class="banner{{#if cover}} banner--full-width-image" style="background-image: url({{cover}}){{/if}}">
        <h1 class="h2 {{#if cover}}highlight{{/if}}"><span>{{name}}</span></h1>
        {{#if bio}}<p class="{{#if cover}}highlight{{/if}}"><span>{{bio}}</span></p>{{/if}}
        <p class="small {{#if cover}}highlight{{/if}}"><span>
            {{#if location}}
                {{location}}<br>
            {{/if}}
            {{#if website}}
                <a href="{{website}}">{{website}}</a><br>
            {{/if}}
            {{plural ../pagination.total empty='No articles' singular='% article' plural='% articles'}}
        </span></p>
    </header>

