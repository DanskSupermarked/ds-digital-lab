{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header banner">
  <h1 class="h2">{{@blog.title}}</h1>
  <p>{{@blog.description}}<br><small>Stories from our Digital Department about technology, work and whatever we find interesting.</small></p>
  <div class="ribbon tags hidden-mobile">
    {{#get "tags" limit="30" include="count.posts" order="count.posts desc"}}
      <span>
        {{#foreach tags}}
            <a href="/tag/{{slug}}">{{name}}</a>
        {{/foreach}}
      </span>
    {{/get}}
  </div>
</header>

<main id="site-main" class="site-main outer">
  <div class="inner">
    <div class="post-feed">
      {{! The tag below includes the post loop - partials/loop.hbs }}

      {{> "post-card"}}
    </div>
  </div>
</main>

{{#get "tags" limit="30" include="count.posts" order="count.posts desc"}}
<aside class="boxes">
	<div class="boxes__item--transparent boxes__item--no-margin-top tags tags--cloud centered">
		<h3>Categories</h3>
    <p>
    	{{#foreach tags}}
          <a href="/tag/{{slug}}">{{name}}</a>
      {{/foreach}}
    </p>
  </div>
</aside>
{{/get}}
