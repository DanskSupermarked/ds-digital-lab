{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header banner">
  <h1 class="h2">{{@blog.title}}</h1>
  <p>{{@blog.description}}<br><small>Sign up to read and interact with what matters most to you.</small></p>
  <p><a href="/writing-stories/" class="btn btn--inverse btn--cta margin-right">Write a story</a><a href="/about/" class="btn btn--inverse">Learn more</a></p>
</header>

{{! The tag below includes the post loop - partials/loop.hbs }}

{{> "loop"}}

{{#get "tags" limit="30" include="count.posts" order="count.posts desc"}}
<aside class="boxes">
	<div class="boxes__item boxes__item--transparent boxes__item--no-margin-top tags tags--cloud">
		<h3>Most popular categories</h3>
    <p>
    	{{#foreach tags}}
          <a href="/tag/{{slug}}">{{name}}</a>
      {{/foreach}}
    </p>
  </div>
</aside>
{{/get}}
