{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<header class="banner{{#if tag.image}} banner--full-width-image" style="background-image: url({{tag.image}}){{/if}}">
    <h1 class="h2 {{#if tag.image}}highlight{{/if}}"><span>{{tag.name}}</span></h1>
    <p class="{{#if tag.image}}highlight{{/if}}"><span>{{#if tag.description}}
        {{tag.description}}
    {{else}}
        {{plural pagination.total empty='No stories' singular='% story' plural='% stories'}}
    {{/if}}</span></p>
</header>

